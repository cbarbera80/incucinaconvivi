<p id="notice"><%= notice %></p>

<div id="page">
  <div class="post clearfix">
    <h1>Categories</h1>

    <div class="entry">
      <table border="1">
        <tr>
          <th>Image</th>
          <th>Category</th>
          <th>Recipes</th>
          <th>Actions</th>
        </tr>
        <% @categories.each do |category| %>
            <tr>
              <td><%= image_tag(category.image(:thumb))%> </td>
              <td><%=category.description %></td>
              <td><%= link_to category.recipes.count, category %></td>
              <td><%=link_to 'Edit', edit_category_path(category)%> | <%=link_to 'Delete', category, :confirm=>'Are you sure?', :method=>:delete %> </td>
            </tr>
        <%end%>
      </table>
    </div>
  </div>
</div>

